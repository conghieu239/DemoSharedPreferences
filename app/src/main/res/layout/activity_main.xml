<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCount"
        android:layout_width="314dp"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="104dp"
        android:background="@color/red"
        android:text="Count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="375dp"
        android:layout_height="318dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnRed"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="142dp"
        android:layout_marginBottom="28dp"
        android:background="#9A3B3B"
        android:backgroundTint="#E91E63"
        android:backgroundTintMode="multiply"
        android:text="Red"
        app:layout_constraintBottom_toTopOf="@+id/btnCount"
        app:layout_constraintEnd_toStartOf="@+id/btnBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnBlue"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginTop="142dp"
        android:layout_marginBottom="28dp"
        android:background="#2196F3"
        android:backgroundTint="#E91E63"
        android:text="Blue"
        app:layout_constraintBottom_toTopOf="@+id/btnCount"
        app:layout_constraintEnd_toStartOf="@+id/btnGreen"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnGreen"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginTop="142dp"
        android:layout_marginBottom="28dp"
        android:background="#2196F3"
        android:backgroundTint="#E91E63"
        android:text="Green"
        app:layout_constraintBottom_toTopOf="@+id/btnCount"
        app:layout_constraintEnd_toStartOf="@+id/btnBlack"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnBlack"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="28dp"
        android:background="#2196F3"
        android:backgroundTint="#E91E63"
        android:text="Black"
        app:layout_constraintBottom_toTopOf="@+id/btnCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>